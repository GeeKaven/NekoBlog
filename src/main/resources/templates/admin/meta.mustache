<!doctype html>
<html>
    {{>layout/head}}
    <body>
        {{>layout/header}}
        <div class="wrapper">
            <div class="columns">
                {{>layout/menu}}
                <main class="column main">
                    <nav class="breadcrumb is-small" aria-label="breadcrumbs">
                        <ul>
                            <li><a href="#">首页</a></li>
                            <li class="is-active"><a href="#" aria-current="page">类目管理</a></li>
                        </ul>
                    </nav>
                    <div class="columns">
                        <div class="column">
                            <div class="column is-6 is-gapless" id="category-form">
                                <div class="field has-addons">
                                    <div class="control">
                                        <input name="name" id="category-name" class="input" type="text" placeholder="类目名称"/>
                                    </div>
                                    <div class="control">
                                        <a class="button is-info" onclick="meta.addCategory()">
                                            添加
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <table class="table is-bordered is-striped is-narrow is-fullwidth">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>名称</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#categories}}
                                    <tr>
                                        <th>{{id}}</th>
                                        <td>{{name}}</td>
                                    </tr>
                                {{/categories}}
                                </tbody>
                            </table>
                        </div>
                        <div class="column">
                            <div class="columns">
                                <div class="column is-6 is-gapless" id="tag-form">
                                    <div class="field has-addons">
                                        <div class="control">
                                            <input name="name" id="tag-name" class="input" type="text" placeholder="标签名称"/>
                                        </div>
                                        <div class="control">
                                            <a class="button is-info" onclick="meta.addTag()">
                                                添加
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <table class="table is-bordered is-striped is-narrow is-fullwidth">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>名称</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#tags}}
                                    <tr>
                                        <th>{{id}}</th>
                                        <td>{{name}}</td>
                                    </tr>
                                {{/tags}}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </main>
            </div>
        </div>
        {{>layout/footer}}
    </body>
</html>